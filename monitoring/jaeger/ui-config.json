    }
  ],
  "about": {
    "links": [
      {
        "url": "https://github.com/your-org/blog-system",
        "text": "Blog System Repository"
      },
      {
        "url": "https://github.com/your-org/blog-system/issues",
        "text": "Report Issues"
      },
      {
        "url": "https://github.com/your-org/blog-system/wiki",
        "text": "Documentation"
      }
    ]
  },
  "pathAgnosticOperations": [
    "GET /api/posts/{id}",
    "PUT /api/posts/{id}",
    "DELETE /api/posts/{id}",
    "GET /api/users/{id}",
    "PUT /api/users/{id}",
    "GET /api/categories/{id}",
    "PUT /api/categories/{id}",
    "DELETE /api/categories/{id}"
  ],
  "colorGenerator": {
    "type": "deterministic"
  },
  "spanCollapse": {
    "enabled": true,
    "threshold": 5
  },
  "archiveTrace": {
    "enabled": true
  },
  "dependencies": {
    "crossClusterDeps": true
  },
  "customization": {
    "header": {
      "logo": {
        "src": "/static/blog-system-logo.png",
        "alt": "Blog System",
        "width": 120,
        "height": 40
      },
      "title": "Blog System - Distributed Tracing"
    },
    "footer": {
      "text": "Blog System Monitoring | Environment: Production",
      "links": [
        {
          "text": "Support",
          "url": "mailto:support@example.com"
        },
        {
          "text": "Status Page",
          "url": "https://status.example.com"
        }
      ]
    }
  },
  "feature": {
    "archiveTrace": true,
    "dependencies": true,
    "monitor": true,
    "qualityMetrics": true,
    "criticalPath": true,
    "deepDependencies": true
  },
  "defaultLookback": "1h",
  "disableWarnings": {
    "CLOCK_SKEW_ADJUSTMENT": false,
    "TRACE_TOO_LARGE": false,
    "TRACE_TOO_LONG": false
  },
  "maxTraceDuration": "24h",
  "maxTraceTimestamp": "now",
  "timezone": "UTC",
  "locale": "en",
  "dateTimeFormat": {
    "date": "YYYY-MM-DD",
    "time": "HH:mm:ss",
    "datetime": "YYYY-MM-DD HH:mm:ss"
  },
  "numberFormat": {
    "decimal": ".",
    "thousands": ","
  },
  "shortcuts": {
    "search": "Ctrl+K",
    "timeline": "T",
    "trace": "Enter",
    "spanDetails": "D",
    "logs": "L"
  },
  "accessibility": {
    "highContrast": false,
    "reducedMotion": false,
    "screenReader": true
  }
}