{
  "monitor": {
    "menuEnabled": true
  },
  "dependencies": {
    "menuEnabled": true,
    "dagMaxNumServices": 200
  },
  "archiveEnabled": true,
  "tracking": {
    "gaID": "",
    "trackErrors": true
  },
  "search": {
    "maxLookback": {
      "label": "7 days",
      "value": "7d"
    },
    "maxDuration": {
      "label": "24 hours",
      "value": "24h"
    },
    "defaultLimit": 20,
    "maxLimit": 1500
  },
  "scripts": [
    {
      "text": "Blog System Monitoring",
      "url": "http://grafana:3000/d/blog-system/blog-system-overview",
      "target": "_blank"
    },
    {
      "text": "Prometheus Metrics",
      "url": "http://prometheus:9090",
      "target": "_blank"
    },
    {
      "text": "Logs (Loki)",
      "url": "http://grafana:3000/explore?orgId=1&left=%5B%22now-1h%22,%22now%22,%22Loki%22,%7B%7D%5D",
      "target": "_blank"
    }
  ],
  "linkPatterns": [
    {
      "type": "process",
      "key": "service.name",
      "url": "http://grafana:3000/d/service-overview/service-overview?var-service=#{service.name}",
      "text": "Service Dashboard: #{service.name}"
    },
    {
      "type": "process",
      "key": "service.instance.id",
      "url": "http://grafana:3000/d/instance-overview/instance-overview?var-instance=#{service.instance.id}",
      "text": "Instance Dashboard: #{service.instance.id}"
    },
    {
      "type": "tags",
      "key": "error",
      "url": "http://grafana:3000/explore?orgId=1&left=%5B%22now-1h%22,%22now%22,%22Loki%22,%7B%22expr%22:%22%7Bservice%3D%5C%22#{service.name}%5C%22%7D%20%7C%3D%20%5C%22#{traceID}%5C%22%22%7D%5D",
      "text": "View Error Logs"
    },
    {
      "type": "tags",
      "key": "user.id",
      "url": "http://grafana:3000/d/user-activity/user-activity?var-user_id=#{user.id}",
      "text": "User Activity: #{user.id}"
    },
    {
      "type": "tags",
      "key": "http.method",
      "url": "http://grafana:3000/d/api-overview/api-overview?var-method=#{http.method}&var-endpoint=#{http.route}",
      "text": "API Metrics: #{http.method} #{http.route}"
    },
    {
      "type": "tags",
      "key": "db.statement",
      "url": "http://grafana:3000/d/database-overview/database-overview?var-query=#{db.statement|truncate:50}",
      "text": "Database Query Analysis"
    }
  ],
  "criticalPath": {
    "enabled": true
  },
  "deepDependencies": {
    "menuEnabled": true
  },
  "qualityMetrics": {
    "menuEnabled": true
  },
  "embedded": {
    "timeline": {
      "hideSummary": false,
      "hideMap": false
    },
    "trace": {
      "hideHeader": false,
      "hideSummary": false,
      "hideMap": false
    }
  },
  "topTagPrefixes": [
    "http",
    "db",
    "error",
    "user",
    "component",
    "version",
    "environment"
  ],
  "theme": "light",
  "menu": [
    {
