# 测试环境配置
NODE_ENV=test
PORT=3002
API_PORT=3003

# 数据库配置
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/blog_test
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=blog_test
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_SSL=false
DATABASE_POOL_MIN=1
DATABASE_POOL_MAX=5

# Redis配置
REDIS_URL=redis://localhost:6379/1
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1
REDIS_TTL=300

# JWT配置
JWT_SECRET=test_jwt_secret_key_for_testing_only
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=test_refresh_secret_key
JWT_REFRESH_EXPIRES_IN=1d

# 邮件配置（测试模式）
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=test@blog-test.local
SMTP_SECURE=false
EMAIL_TESTING_MODE=true

# 文件上传配置
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif
UPLOAD_PATH=./test-uploads
STATIC_URL=http://localhost:3003/static

# 日志配置
LOG_LEVEL=warn
LOG_FORMAT=json
LOG_FILE_ENABLED=false
LOG_CONSOLE_ENABLED=false
LOG_TEST_MODE=true

# 缓存配置
CACHE_TTL=60
CACHE_MAX_ITEMS=100

# 安全配置
CORS_ORIGIN=http://localhost:3002
CORS_CREDENTIALS=true
RATE_LIMIT_WINDOW=1
RATE_LIMIT_MAX=1000
CSRF_SECRET=test_csrf_secret
SECURITY_TESTING_MODE=true

# 监控配置
METRICS_ENABLED=false
METRICS_PORT=9091
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# 测试配置
TEST_TIMEOUT=30000
TEST_PARALLEL=true
TEST_COVERAGE=true
TEST_WATCH=false
TEST_VERBOSE=false

# 数据库测试配置
DB_RESET_BEFORE_TESTS=true
DB_SEED_TEST_DATA=true
DB_TRANSACTION_ROLLBACK=true

# Mock服务配置
MOCK_EXTERNAL_APIS=true
MOCK_EMAIL_SERVICE=true
MOCK_FILE_UPLOAD=true
MOCK_PAYMENT_SERVICE=true

# 第三方服务配置（测试模式）
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_TEST_MODE=true

# 测试数据配置
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=test123
TEST_ADMIN_EMAIL=admin@test.local
TEST_ADMIN_PASSWORD=admin123

# 性能配置
CLUSTER_MODE=false
WORKER_PROCESSES=1
KEEP_ALIVE_TIMEOUT=1000
REQUEST_TIMEOUT=10000

# 调试配置
DEBUG=
VERBOSE_LOGGING=false
SQL_LOGGING=false
REQUEST_LOGGING=false

# CI/CD配置
CI_MODE=false
GITHUB_ACTIONS=false
COVERAGE_THRESHOLD=80

# 测试数据库清理
CLEANUP_AFTER_TESTS=true
CLEANUP_UPLOADS=true
CLEANUP_LOGS=true