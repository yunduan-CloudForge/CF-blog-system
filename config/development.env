# 开发环境配置
NODE_ENV=development
PORT=3000
API_PORT=3001

# 数据库配置
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/blog_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=blog_dev
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis配置
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# JWT配置
JWT_SECRET=dev_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=dev_refresh_secret_key
JWT_REFRESH_EXPIRES_IN=30d

# 邮件配置
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@blog-dev.local
SMTP_SECURE=false

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp
UPLOAD_PATH=./uploads
STATIC_URL=http://localhost:3001/static

# 日志配置
LOG_LEVEL=debug
LOG_FORMAT=dev
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# 缓存配置
CACHE_TTL=300
CACHE_MAX_ITEMS=1000

# 安全配置
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
CSRF_SECRET=dev_csrf_secret

# 监控配置
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# 开发工具配置
HOT_RELOAD=true
SOURCE_MAPS=true
DEBUG_MODE=true
API_DOCS_ENABLED=true
API_DOCS_PATH=/api-docs

# 第三方服务配置
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# 开发数据库种子
SEED_DATA=true
SEED_ADMIN_EMAIL=admin@blog-dev.local
SEED_ADMIN_PASSWORD=admin123

# 性能配置
CLUSTER_MODE=false
WORKER_PROCESSES=1
KEEP_ALIVE_TIMEOUT=5000
REQUEST_TIMEOUT=30000

# 调试配置
DEBUG=blog:*
VERBOSE_LOGGING=true
SQL_LOGGING=true
REQUEST_LOGGING=true